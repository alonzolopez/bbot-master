<launch>
	<arg name="marker1Id" default="99"/>
	<arg name="marker2Id" default="05"/>
	<arg name="marker3Id" default="44"/>
	<arg name="marker4Id" default="26"/>
	<arg name="markerSize" default="0.047"/>
	<arg name="marker1_frame" default="marker1_frame"/>
	<arg name="marker2_frame" default="marker2_frame"/>
	<arg name="marker3_frame" default="marker3_frame"/>
	<arg name="marker4_frame" default="marker4_frame"/>
	<arg name="device" default="/dev/video2"/>
	<include file="$(find bbot_aruco)/launch/bbot_cam.launch">
		<arg name="device" value="$(arg device)"/>
	</include>
	<group ns="aruco_1">
		<include file="$(find bbot_aruco)/launch/bbot_double.launch">
			<arg name="marker1Id" value="$(arg marker1Id)"/>
			<arg name="marker2Id" value="$(arg marker2Id)"/>
			<arg name="markerSize" value="$(arg markerSize)"/>
			<arg name="marker1_frame" value="$(arg marker1_frame)"/>
			<arg name="marker2_frame" value="$(arg marker2_frame)"/>
		</include>
	</group>
	<group ns="aruco_2">
		<include file="$(find bbot_aruco)/launch/bbot_double.launch">
			<arg name="marker1Id" value="$(arg marker3Id)"/>
			<arg name="marker2Id" value="$(arg marker4Id)"/>
			<arg name="markerSize" value="$(arg markerSize)"/>
			<arg name="marker1_frame" value="$(arg marker3_frame)"/>
			<arg name="marker2_frame" value="$(arg marker4_frame)"/>
		</include>
	</group>
	<node type="rviz" name="rviz" pkg="rviz" args="-d $(find bbot_aruco)/rviz/bbot_live_demo.rviz" />
</launch>