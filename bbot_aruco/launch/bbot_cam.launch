<launch>
  <arg name="device" default="/dev/video0"/> 
  <arg name="width" default="1920"/>
  <arg name="height" default="1080"/>
  <arg name='camera_calib_file' default="file:///home/dynamic/catkin_ws/src/usb_cam/bbot_cam_calib.yaml"/>
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="$(arg device)" />
    <param name="image_width" value="$(arg width)" />
    <param name="image_height" value="$(arg height)" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="$(arg camera_calib_file)"/>
  </node>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>
</launch>
